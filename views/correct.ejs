<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="shortcut icon" href="./images/logo.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
        }

        .card {
            max-width: 500px;
            width: 100%;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .card h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            margin-bottom: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            color: #ffffff;
            font-weight: bold;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <header>
        <div class="logo" title="E-Learning Portal">
            <img src="https://img.freepik.com/free-vector/hand-drawn-flat-design-stack-books_23-2149334862.jpg?size=338&ext=jpg&ga=GA1.1.1413502914.1696723200&semt=sph"
                alt="">
            <h2>E<span class="danger">Learning</span>Portal -- Assignment Correction</h2>
        </div>
    </header>
    <div class="container">
        <div class="card">
            <h1>View Assignments</h1>
            <ul>
                
                    <% assignments.forEach(function(assignment) { %>
                        <li>
                            <h2><strong><%= assignment.title %></strong></h2>
                            <p><%= assignment.studentName %></p>
                            <p><%= assignment.marks %></p>
                            <p><%= assignment.comment %></p>
                            <a href="/uploads/<%= assignment.file %>"> Download</a>
                        </li>
                    <% }); %>
                
            </ul>
        </div>
        <div class="card">
            <h1>Grade Assignment</h1>
            <form action="/admin/correct" method="post"> <!-- Assuming you have a route to handle submission -->
                <select name="assignment" class="form-control mb-3" required>
                    <% assignments.forEach(function(assignment) { %>
                        <option value="<%= assignment._id %>"><%= assignment.title %>  <%= assignment.studentName %></option>
                    <% }); %>
                </select>
                <input type="number" name="marks" class="form-control mb-3" placeholder="Marks/100" required>
                <textarea name="comment" class="form-control mb-3" rows="4" placeholder="Comments"></textarea>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <script src="javascript/app.js"></script>
</body>

</html>
